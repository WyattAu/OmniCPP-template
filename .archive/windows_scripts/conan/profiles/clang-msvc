[settings]
os=Windows
arch=x86_64
compiler=clang
compiler.version=16
compiler.runtime=dynamic
compiler.runtime_version=v143
compiler.libcxx=libc++
compiler.cppstd=23
build_type=${settings.build_type:Release}

[conf]
tools.cmake.cmaketoolchain:generator=Visual Studio 17 2022
tools.microsoft.msbuild:vs_version=17
tools.cmake.cmake_layout:build_folder_vars=['settings.compiler', 'settings.build_type']
tools.build:jobs=2
tools.compilation:verbosity=quiet

[options]
vulkan/*:shared=True

[buildenv]
CC=clang-cl.exe
CXX=clang-cl.exe